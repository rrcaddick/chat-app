    "@types/bcrypt": "^5.0.0",
    "@types/colors": "^1.2.1",
    "@types/cookie-parser": "^1.4.3",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/express-validator": "^3.0.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mongoose": "^5.11.97",
    "@types/ms": "^0.7.31",
    "@types/multer": "^1.4.7",
    "@types/socket.io": "^3.0.2",
    "@types/uuid": "^8.3.4",
    "bcrypt": "^5.0.1",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-handler": "^1.2.0",
    "express-validator": "^6.14.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.4.4",
    "ms": "^2.1.3",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.5.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/concurrently": "^7.0.0",
    "@types/nodemon": "^1.19.1",
    "concurrently": "^7.2.2",
    "nodemon": "^2.0.19"
  }
}
