{
  "name": "chat_app",
  "version": "1.0.0",
  "description": "Chat application, making use of socket.io, redux and redux middleware, chakra ui, and MERN",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "dev_debug": "nodemon --inspect backend/server.js",
    "client": "npm start --prefix frontend",
    "client_debug": "npm run debug --prefix frontend",
    "debug": "concurrently \"nodemon --inspect backend/server.js\" \"npm run debug --prefix frontend\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend"
  },
  "keywords": [],
  "author": "Raymond Caddick",
  "license": "ISC",
